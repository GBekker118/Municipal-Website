@model List<PROG7312_POE.Models.ReportIssue>

<style>
    /* Background image */
    body {
        background-image: url('/img/slide2.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        margin: 0;
        padding: 0;
    }

    .header {
        background-color: rgba(0,0,0,0.5);
        color: white;
        text-align: center;
        width: 400px;
        border-radius: 50px;
        padding: 1%;
    }

    .table {
        text-align: center;
        font-size: 20px;
        max-width: 100vw;
        background-color: white;
    }

    thead {
        background-color: #063A89;
        color:white;
    }

    th {
        border: 2px solid black;
    }

    td {
        border: 2px solid black;
    }

    /* Back Button */
    .back-button {
        color:white;
        background-color: rgba(69, 165, 217, 1.0);
        font-weight:bold;
        text-decoration:none;
        border-radius:100px;
        padding-left:10px;
        padding-right:10px;
    }

    .back-button:hover {
        color: white;
        filter: brightness(0.8);
        transform: translateY(-50%) scale(1.1); 
    }
</style>

<div style="display:flex; justify-content:center;">
    <h1 class="header">
        <a class="back-button" asp-controller="Home" asp-action="Admin">&#10094;-</a>   Reported Issues
    </h1>
</div>
<!-- Table showing all Report Issues -->
<table class="table">
    <thead>
        <tr>
            <th style="width:10%;">ID</th>
            <th style="width:20%;">Location</th>
            <th style="width:10%;">Category</th>
            <th style="width:45%;">Description</th>
            <th style="width:15%;">Media</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model)
        {
            <tr>
                <td>@issue.Id</td>
                <td>@issue.Location</td>
                <td>@issue.Category</td>
                <td>@issue.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(issue.Media))
                    {
                        var fileName = System.IO.Path.GetFileName(issue.Media);
                        <a href="@issue.Media" download="@fileName">@fileName</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>